import json
from flask import Flask, Response

app = Flask(__name__)
app.config['JSON_AS_ASCII'] = False  # لضمان عرض النصوص العربية بشكل صحيح

@app.route('/')
def home():
    return "مرحباً! Flask يعمل بنجاح في بيئة TensorFlow GPU!"

@app.route('/judges')
def judges():
    message = {"message": "مرحباً بالحكام! هذه هي نقطة النهاية المخصصة وسهلة الوصول."}
    return Response(json.dumps(message, ensure_ascii=False), mimetype='application/json')

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, debug=True)
