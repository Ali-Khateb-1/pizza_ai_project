import tensorflow as tf
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense
from tensorflow.keras.preprocessing.image import ImageDataGenerator
import os

# تحديد المسار الصحيح لمجلد البيانات
data_dir = "/home/ali/pizza_ai_project/data/clusters"

# التأكد من أن المجلد موجود
if not os.path.exists(data_dir):
    print(f"❌ خطأ: المجلد {data_dir} غير موجود! تأكد من أن لديك الصور المصنفة.")
    exit()

# إعداد بيانات التدريب
datagen = ImageDataGenerator(rescale=1./255, validation_split=0.2)
train_generator = datagen.flow_from_directory(data_dir, target_size=(64, 64), batch_size=32, class_mode='categorical', subset='training')
val_generator = datagen.flow_from_directory(data_dir, target_size=(64, 64), batch_size=32, class_mode='categorical', subset='validation')

# بناء نموذج `CNN`
model = Sequential([
    Conv2D(32, (3, 3), activation='relu', input_shape=(64, 64, 3)),
    MaxPooling2D(2, 2),
    Conv2D(64, (3, 3), activation='relu'),
    MaxPooling2D(2, 2),
    Flatten(),
    Dense(128, activation='relu'),
    Dense(3, activation='softmax')  # لدينا 3 مجموعات
])

# تجميع النموذج
model.compile(optimizer='adam', loss='categorical_crossentropy', metrics=['accuracy'])

# تدريب النموذج
model.fit(train_generator, validation_data=val_generator, epochs=10)

# حفظ النموذج
model.save("/home/ali/pizza_ai_project/model_cnn.h5")

print("🎉 تم تدريب النموذج وحفظه بنجاح!")
